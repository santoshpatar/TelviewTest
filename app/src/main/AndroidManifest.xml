<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.telview">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".SocialAppClass"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".view.albums.AlbumDetailActivity"
                android:label="@string/title_activity_album_detail"
                >

        </activity>
        <activity
                android:name=".view.posts.PostDetailActivity"
                android:label="@string/title_activity_post_detail">

        </activity>
        <activity
                android:name=".view.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>